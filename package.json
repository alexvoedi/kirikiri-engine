{
  "name": "kirikiri-engine",
  "type": "module",
  "version": "0.0.1",
  "private": false,
  "packageManager": "pnpm@10.8.0",
  "description": "a javascript reimplementation for the kirikiri visual novel engine",
  "author": {
    "name": "Alexander VÃ¶disch"
  },
  "license": "MIT",
  "keywords": [
    "game",
    "visual novel",
    "engine"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.cts",
  "bin": {
    "kiri-cli": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --fix",
    "test": "CI=0 FORCE_COLOR=1 vitest --watch --coverage",
    "prepare": "husky",
    "typecheck": "tsc --noEmit",
    "knip": "knip --cache",
    "check": "nx run-many -t lint test typecheck convert knip",
    "check:ci": "nx run-many --parallel=3 -t lint test typecheck convert knip",
    "check:watch": "pnpm check && nx watch --all -- pnpm check"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "consola": "^3.4.2",
    "lodash": "^4.17.21",
    "pixi.js": "^8.9.1",
    "ses": "^1.12.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.12.0",
    "@nx/eslint": "20.7.2",
    "@nx/vite": "20.7.2",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.14.1",
    "@vitest/coverage-istanbul": "^3.1.1",
    "dotenv": "^16.5.0",
    "eslint": "^9.24.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "knip": "^5.50.2",
    "lint-staged": "^15.5.1",
    "nx": "20.7.2",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1",
    "zod": "^3.24.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue,json,html}": "eslint --fix"
  },
  "nx": {}
}
